<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="core.gameOfPhones"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="core.gameOfPhones.StartScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="core.gameOfPhones.MenuScreen"
            android:label="@string/title_activity_menu_screen"
            android:parentActivityName="core.gameOfPhones.StartScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gameofphones.StartScreen" />
        </activity>
        <activity
            android:name="core.gameOfPhones.LoginToFoursquare"
            android:label="@string/title_activity_login_to_foursquare" >
        </activity>
        <activity
            android:name="core.gameOfPhones.FoursquareOauthWebVeiw"
            android:label="@string/title_activity_forusquare_oauth_web_veiw" >
        </activity>
        <activity
            android:name="core.gameOfPhones.FriendsList"
            android:label="@string/title_activity_friends_list" >
        </activity>
        <activity
            android:name="core.gameOfPhones.DisplayFriends"
            android:label="@string/title_activity_display_friends" >
        </activity>
    </application>

</manifest>